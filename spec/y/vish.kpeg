space = " "
- = space*
nl = "\n"

word = < /[_A-Za-z0-9]*/ > { text }

 statement = statement:s1 - ';' - statement:s2 { [s1, s2] }
          | term
term = term:t1 - "&&" - term:t2 { [:and, t1,  t2] }
     | term:t1 - "||" - term:t2 { [:or, t1,  t2] }
     | term:t1 - "|" - term:t2 { [:|, t1,  t2] }
     | word:w {[ w ] } 

root = statement:t { @result = t }
