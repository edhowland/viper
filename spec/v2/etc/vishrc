mount /v
mkdir /v/buf
mkdir /v/clip
proj=:pwd
vish_version="0.9"
function newb(file) { mkbuf /v/buf/:{file} }
function open(fname) { bname=:(basename :fname); newb :bname; cat < :fname > /v/buf/:{bname} }
function mkclip(num) { mkbuf /v/clip/:{num} }
alias l="echo *"
mkclip 0
function yank(depth) { subtree :depth > /v/clip/0 }
